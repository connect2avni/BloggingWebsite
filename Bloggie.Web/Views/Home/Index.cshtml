@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogging Website</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        

     

        .jumbotron {
            background-image: url('https://via.placeholder.com/1500x600');
            background-size: cover;
            color: #fff;
            text-align: center;
            padding: 100px 20px;
            margin-bottom: 0;
        }

            .jumbotron h1 {
                font-size: 48px;
                font-weight: bold;
            }

            .jumbotron p {
                font-size: 18px;
            }

        .blog-post {
            margin-bottom: 30px;
        }

            .blog-post img {
                max-width: 100%;
                margin-bottom: 10px;
            }

        .footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    

    <!-- Jumbotron -->
    <div class="jumbotron">
        <h1>Welcome to My Blog</h1>
        <p>Explore insightful articles and stay updated with the latest trends.</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Read More</a>
    </div>

    <!-- Blog posts -->
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="blog-post">
                    <img src="https://via.placeholder.com/400x250" alt="Post Image">
                    <h2>Post Title 1</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                    <a href="#" class="btn btn-secondary">Read More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-post">
                    <img src="https://via.placeholder.com/400x250" alt="Post Image">
                    <h2>Post Title 2</h2>
                    <p>Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <a href="#" class="btn btn-secondary">Read More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-post">
                    <img src="https://via.placeholder.com/400x250" alt="Post Image">
                    <h2>Post Title 3</h2>
                    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    <a href="#" class="btn btn-secondary">Read More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 My Blog</p>
        </div>
    </footer>

    <!-- Bootstrap JS and dependencies (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
